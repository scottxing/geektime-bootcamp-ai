---
import PageLayout from '../../layouts/PageLayout.astro';
import ToolDetail from '../../components/tools/ToolDetail';
import { getToolById } from '../../data/tools';
import { getUrl } from '../../utils/url';

const tool = getToolById('mcp');
if (!tool) {
  return Astro.redirect('/tools');
}
---

<PageLayout title={`${tool.name} - ${tool.tagline}`} description={tool.description}>
  <div class="md-section md-section--sky min-h-screen">
    <div class="md-container">
      <ToolDetail tool={tool} client:load />

      <div class="mt-space-8 text-center">
        <a href={getUrl('tools')} class="hover:underline text-body text-sky">
          ← 返回工具生态
        </a>
      </div>
    </div>
  </div>
</PageLayout>
